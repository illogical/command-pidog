# PiDog API Configuration
# Copy to .env and fill in your values

# Run without real hardware (for development)
PIDOG_MOCK_HARDWARE=false

# API server
PIDOG_HOST=0.0.0.0
PIDOG_PORT=8000
PIDOG_DEBUG=false

# Safety thresholds
PIDOG_MIN_BATTERY_VOLTAGE=6.5
PIDOG_MAX_ACTION_RATE=10

# Sensor streaming rates
PIDOG_SENSOR_BROADCAST_HZ=5.0
PIDOG_STATUS_BROADCAST_HZ=0.2

# PiDog hardware
PIDOG_PIDOG_SOUND_DIR=~/pidog/sounds/

# Speech-to-text (Whisper server)
PIDOG_STT_URL=http://localhost:5000/transcribe

# LLM - Ollama (local)
PIDOG_OLLAMA_URL=http://localhost:11434
PIDOG_OLLAMA_MODEL=llama3.2:3b

# LLM - OpenRouter (optional)
PIDOG_OPENROUTER_API_KEY=
PIDOG_OPENROUTER_MODEL=meta-llama/llama-3-8b-instruct

# Default LLM provider: ollama or openrouter
PIDOG_DEFAULT_LLM_PROVIDER=ollama
